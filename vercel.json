{
    "builds": [
      {
        "src": "index.html",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "rewrites": [
      { "source": "/(.*)", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "/(.*)\\.js",
        "headers": [
          { "key": "Content-Type", "value": "application/javascript" }
        ]
      },
      {
        "source": "/(.*)\\.css",
        "headers": [
          { "key": "Content-Type", "value": "text/css" }
        ]
      }
    ]
  }